    </section>
    <section class="menu-section">
        <div class="menu-toggle-wrapper">
            <div class="menu-container">
                <div class="menu-tab">
                    <div class="menu-item-dropdown">
                        <a role="menu-item" href="/" class="menu-item-dropdown-btn">Recipes</a>
                        <div class="menu-item-dropdown-content">
                            <div class="menu-item-dropdown-content-wrapper">
                                <a href="/recipe-category/Break Fast">Break Fast</a>
                                <a href="/recipe-category/Launch">Launch</a>
                                <a href="/recipe-category/Dinner">Dinner</a>
                                <a href="/recipe-category/Dessert">Dessert</a>
                                <a href="/recipe-category/Baking">Baking</a>
                                <a href="/recipe-category/Drinks">Drinks</a>
                                <% if (currentUser) { %>
                                    <a href="/article" class="menu-dropdown-postarticle">Create Recipe</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <a role="menu-item" href="#about">About</a>
                    <a role="menu-item" href="#contact">Contact</a>
                </div>
            </div>
            <div class="user-container">
                <% if (currentUser) { %>
                    <div class="user-auth">
                        <a href="/user/logout">Log out</a>
                    </div>
                <% } else { %>
                    <div class="user-auth">
                        <a href="/sign-in">Sign in</a>
                    </div>
                <% } %>
                <% if (currentUser) { %>
                    <div class="user-image">
                        <a href="/account"><img src="/images/uploads/profilepics/<%= data.profile_image %>" alt="User profile picture"></a>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="menu-toggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" class="menu-toggle-button" viewBox="0 0 24 24">
