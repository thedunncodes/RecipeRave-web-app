<% if (message.name) { %>
    <%= `${message.name}, Welcome to Recipe Rave`  %>
<% } %>
<form action="/sign-up/access" method="post">
    <!-- User Name Field -->
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required aria-required="true" maxlength="20" placeholder="Your username">
    </div>

    <!-- Full Name Field -->
    <div class="form-group">
        <label for="fullname">Full name</label>
        <input type="text" id="fullname" name="fullname" required aria-required="true" maxlength="50" placeholder="Your fullname">
    </div>
    
    <!-- Email Field -->
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required aria-required="true" maxlength="50" placeholder="Your email">
    </div>

    <!-- Password Field -->
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required aria-required="true" minlength="5" placeholder="password">
    </div>

