<div class="form-holder-header">
    Account Login
</div>
<form action="/sign-in/access" method="post">
    <!-- User Name Field -->
    <div class="form-group">
        <!-- <label for="username">Username</label> -->
        <input type="text" id="username" name="username" required aria-required="true" placeholder="Username">
    </div>

     <!-- Password Field -->
     <div class="form-group">
        <!-- <label for="password">Password</label> -->
        <input type="password" id="password" name="password" required aria-required="true" placeholder="Password">
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <button type="submit">Sign in</button>
    </div>
    <div class="form-group">
        <a href="/sign-up">New user?</a>
    </div>
</form>